                </mat-radio-group>
            </div>
            <label for="diaPago">Dia de Pago:</label>
            <input type="text" formControlName="diaPago">
            <label for="totalPagos">Total Pagos:</label>
            <input type="text" formControlName="totalPagos">
            <button (click)="cancel()">Cancelar</button>
